<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="mainContainer" alignment="CENTER" spacing="15" style="-fx-background-color: #1a1a1a;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.SettingsController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label style="-fx-font-size: 20px; -fx-text-fill: white; -fx-font-weight: bold;" text="Postavke Sistema" />

    <Separator opacity="0.3" />

    <Label text="Izaberi Temu Aplikacije:" textFill="WHITE" />
    <ChoiceBox fx:id="themeChoiceBox" prefWidth="200" />

    <Separator opacity="0.3" />

    <Label text="Promjena Lozinke:" textFill="WHITE" />
    <PasswordField fx:id="passwordField" promptText="Unesite novu lozinku" maxWidth="200" />

    <Button onAction="#handleChangePassword" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Spasi Lozinku" />

    <Separator opacity="0.3" />

    <Button onAction="#handleBack" prefWidth="100" text="Nazad" style="-fx-background-color: #555555; -fx-text-fill: white;" />
</VBox>