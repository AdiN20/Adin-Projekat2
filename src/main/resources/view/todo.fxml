<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="15" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.TodoController" style="-fx-background-color: #1a1a1a;">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label style="-fx-font-size: 22px; -fx-font-weight: bold;" text="To-Do Lista" textFill="WHITE" />
    <Label fx:id="statsLabel" text="Ukupno zadataka: 0" style="-fx-text-fill: #00aaff; -fx-font-weight: bold;" />

    <TextArea fx:id="noteArea" promptText="Unesite novi zadatak..." prefHeight="100" style="-fx-control-inner-background: #333333; -fx-text-fill: white;" />

    <Button onAction="#handleAddNote" text="Dodaj Zadatak" maxWidth="Infinity" style="-fx-background-color: #0078d7; -fx-text-fill: white; -fx-font-weight: bold;" />

    <ListView fx:id="notesListView" prefHeight="200" style="-fx-control-inner-background: #333333; -fx-text-fill: white;" />

    <HBox spacing="10" alignment="CENTER">
        <Button onAction="#handleExportPDF" text="Export PDF" style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-font-weight: bold;" />
        <Button onAction="#handleBack" text="Nazad" style="-fx-background-color: #555555; -fx-text-fill: white;" />
    </HBox>
</VBox>